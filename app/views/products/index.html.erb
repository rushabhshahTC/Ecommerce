<br>
<%= link_to 'Create Product', new_user_product_path(current_user), class: 'btn btn-primary' %>
<div align='center'>
    <% if Product.exists? %>
        <table class="table table-hover table-bordered" style="margin-top: 5px;height: auto;width: min-content;">
            <tr class='thead-dark'>
                <th>Product Name</th>
                <th>Product Price</th>
                <th>Category</th>
                <th>SubCategory</th>
                <th>Size</th>
                <th>Color</th>
                <th>Product Images</th>
            </tr>
            <% @products.each do |product| %>
                <tr>
                    <td><%= product.name %></td>
                    <td><%= product.price %></td>
                    <td><%= product.category_id %></td>
                    <td><%= product.sub_category_id %></td>
                    <% product.product_options.each do |product_option| %>
                        <td><%= product_option.size %></td>
                        <td><%= product_option.color %></td>
                    <% end %>
                    <% if product.images.present? %>
                        <% product.images.each do |image| %>
                            <td><%= image_tag url_for(image), {height: 70}%></td>
                        <% end %>
                    <% end %>
                </tr>
            <% end %>
        </table>
    <% end %>
</div>

