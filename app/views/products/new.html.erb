<h3>New Product Form</h3>
<%= form_for @product do |f| %>
    <div class="form-group">
        <%= f.label "Product Name" %>
        <%= f.text_field :name %>
    </div>
    <div class="form-group">
        <%= f.label "Price" %>
        <%= f.text_field :price %>
    </div>
    <div class="form-group">
        <%= f.label "Sub Categories" %>
        <%= f.collection_select(:sub_category_id, SubCategory.all, :id, :name) %>
    </div>

    <div class="form-group">
        <%= f.label "Brand" %>
        <%= f.collection_select(:brand_id, Brand.all, :id, :name) %>
    </div>

    <div class="form-group">
        <%= f.submit "Create",class: 'btn btn-primary' %>
        <%= link_to 'Back', products_path, class: 'btn btn-primary' %>
    </div>
<% end %>
